---
import '../styles/global.css';
import TerminalFooter from '../components/TerminalFooter.astro';
import ThemeToggle from '../components/ThemeToggle.jsx';
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="dark bg-bg-dark text-text-light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | AI Solutions` : 'AI Solutions Consulting'}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-sans antialiased bg-bg-dark text-text-light min-h-screen relative overflow-hidden">
    <!-- Skip to content -->
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-dg-surface focus:text-dg-accent focus:rounded"
    >
      Skip to content
    </a>

    <!-- Top bar with theme toggle -->
    <header class="fixed inset-x-0 top-0 z-50 bg-bg-dark/90 backdrop-blur border-b border-white/10">
      <nav class="mx-auto max-w-7xl flex items-center justify-between py-4 px-8">
        <div class="flex space-x-6">
          <a href="/" class="text-white hover:text-dg-accent">Home</a>
          <a href="/about" class="text-white hover:text-dg-accent">About</a>
          <a href="/services" class="text-white hover:text-dg-accent">Services</a>
          <a href="/blog" class="text-white hover:text-dg-accent">Blog</a>
        </div>
        <ThemeToggle />
      </nav>
    </header>

    <!-- Removed floating ASCII/particle background and ASCII banner -->

    <main
      id="main"
      class="relative z-10 mx-auto mt-24 max-w-3xl rounded-xl border-2 border-white/10 bg-bg-dark p-8 shadow-[0_0_20px_rgba(20,227,255,0.15)]"
    >
      <slot />
    </main>

    <TerminalFooter />

    <script is:inline>
      // Dark mode toggle logic
      if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
      window.toggleDarkMode = function () {
        if (document.documentElement.classList.contains('dark')) {
          document.documentElement.classList.remove('dark');
          localStorage.theme = 'light';
        } else {
          document.documentElement.classList.add('dark');
          localStorage.theme = 'dark';
        }
      };
    </script>
  </body>
</html> 