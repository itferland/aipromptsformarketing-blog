---
import "../global.css";
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Blog` : 'Blog'}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <!-- Shimmering ASCII art header -->
    <pre class="ascii-header neon-glow mb-2 select-none">
Mc:âˆ˜cCM**+.Nm::++NM+:Xm:.N.Mc:+
    </pre>
    <nav class="ascii-header neon-glow">
      <a href="/" class="hover:underline">Home</a> |
      <a href="/about" class="hover:underline">About</a> |
      <a href="/services" class="hover:underline">Services</a> |
      <a href="/blog" class="hover:underline">Blog</a>
    </nav>
    <div class="terminal-container">
      <slot />
    </div>

    <!-- Floating ASCII glyphs -->
    <script is:inline>
      const chars = ['*', '+', '.', 'M', 'c', ':', 'N'];
      for (let i = 0; i < 40; i++) {
        const el = document.createElement('div');
        el.textContent = chars[Math.floor(Math.random() * chars.length)];
        el.style.position = 'fixed';
        el.style.left = Math.random() * 100 + 'vw';
        el.style.top = Math.random() * 100 + 'vh';
        el.style.color = '#00ff99';
        el.style.fontFamily = 'monospace';
        el.style.opacity = 0.5;
        el.style.pointerEvents = 'none';
        el.style.fontSize = (0.8 + Math.random() * 1.2) + 'rem';
        el.style.zIndex = 1;
        el.style.animation = `floatUp ${5 + Math.random() * 10}s linear infinite`;
        document.body.appendChild(el);
      }
    </script>
    <style>
      @keyframes floatUp {
        0% { transform: translateY(0); }
        100% { transform: translateY(-100vh); }
      }
      .pixel-avatar {
        position: fixed;
        bottom: 1rem;
        left: 1rem;
        width: 48px;
        height: 48px;
        image-rendering: pixelated;
        animation: bounce 2s infinite ease-in-out;
        z-index: 50;
      }
      @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-5px); }
      }
    </style>
    <img src="/pixel-bot.gif" alt="Pixel Bot" class="pixel-avatar" />
  </body>
</html>
