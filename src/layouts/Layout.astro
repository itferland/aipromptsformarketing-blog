---
import "../global.css";
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Blog` : 'Blog'}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <nav class="ascii-header neon-glow">
      <a href="/" class="hover:underline">Home</a> |
      <a href="/about" class="hover:underline">About</a> |
      <a href="/services" class="hover:underline">Services</a> |
      <a href="/blog" class="hover:underline">Blog</a>
    </nav>
    <div class="terminal-container">
      <slot />
    </div>

    <!-- Floating ASCII glyphs -->
    <script is:inline>
      const chars = ['*', '+', '.', 'x', 'M', 'N', ':', 'c'];
      const numParticles = 40;
      for (let i = 0; i < numParticles; i++) {
        const span = document.createElement('span');
        span.className = 'floating-char';
        span.innerText = chars[Math.floor(Math.random() * chars.length)];
        span.style.left = `${Math.random() * 100}vw`;
        span.style.animationDuration = `${4 + Math.random() * 6}s`;
        span.style.fontSize = `${0.8 + Math.random()}rem`;
        document.body.appendChild(span);
      }
    </script>
    <style>
      .floating-char {
        position: absolute;
        font-family: 'Fira Mono', monospace;
        font-size: 1.2rem;
        animation: float-up linear infinite;
        opacity: 0.13;
        pointer-events: none;
        user-select: none;
        color: var(--neon-green);
        text-shadow: 0 0 8px var(--neon-green), 0 0 16px var(--pixel-border);
      }
      @keyframes float-up {
        0% {
          transform: translateY(100vh) scale(1);
          opacity: 0;
        }
        50% {
          opacity: 1;
        }
        100% {
          transform: translateY(-20vh) scale(1.2);
          opacity: 0;
        }
      }
      .pixel-avatar {
        position: fixed;
        bottom: 1rem;
        left: 1rem;
        width: 64px;
        height: 64px;
        image-rendering: pixelated;
        animation: bounce 2s infinite ease-in-out;
        z-index: 50;
      }
      @keyframes bounce {
        0%, 100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-5px);
        }
      }
    </style>
    <img class="pixel-avatar" src="/pixel-bot.gif" alt="Pixel Bot" />
  </body>
</html>
