---
import '../styles/global.css';
import TerminalFooter from '../components/TerminalFooter.astro';
import ThemeToggle from '../components/ThemeToggle.jsx';
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | AI Solutions` : 'AI Solutions Consulting'}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="relative overflow-hidden">
    <!-- Skip to content -->
    <a href="#main" class="skip-link">Skip to content</a>

    <!-- Top nav + theme toggle -->
    <header class="fixed inset-x-0 top-0 z-50 bg-dg-surface/90 backdrop-blur border-b border-white/10">
      <nav class="mx-auto max-w-7xl flex items-center justify-between py-4 px-8">
        <div class="flex space-x-6">
          <a href="/" class="hover:text-dg-accent">Home</a>
          <a href="/about" class="hover:text-dg-accent">About</a>
          <a href="/services" class="hover:text-dg-accent">Services</a>
          <a href="/blog" class="hover:text-dg-accent">Blog</a>
        </div>
        <ThemeToggle />
      </nav>
    </header>

    <!-- Main content wrapper -->
    <main
      id="main"
      class="relative z-10 mx-auto mt-24 max-w-3xl rounded-xl border-2 border-white/10 bg-dg-surface p-8 shadow-[0_0_20px_rgba(20,227,255,0.15)]"
    >
      <slot />
    </main>

    <!-- Comment out TerminalFooter
    <TerminalFooter />
    -->

    <script is:inline>
      // Dark mode init & toggle
      if (
        localStorage.theme === 'dark' ||
        (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
      window.toggleDarkMode = function () {
        if (document.documentElement.classList.contains('dark')) {
          document.documentElement.classList.remove('dark');
          localStorage.theme = 'light';
        } else {
          document.documentElement.classList.add('dark');
          localStorage.theme = 'dark';
        }
      };
    </script>
  </body>
</html>
