---
import '../styles/global.css';
import TerminalFooter from '../components/TerminalFooter.astro';
import ThemeToggle from '../components/ThemeToggle.jsx';
const { title } = Astro.props;
const pageTitle = title ? `${title} | AI Solutions` : 'AI Solutions Consulting';
---
<!DOCTYPE html>
<html lang="en" class="dark bg-bg-dark text-text-light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="font-sans antialiased bg-bg-dark text-text-light min-h-screen flex flex-col">
    <!-- Skip to content -->
    <a
      href="#main"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-accent focus:text-white focus:rounded"
    >
      Skip to content
    </a>

    <!-- Sticky Header -->
    <header class="sticky top-0 z-50 w-full bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 border-b border-white/10 shadow-lg">
      <nav class="mx-auto max-w-7xl flex items-center justify-between py-4 px-6 md:px-10">
        <div class="flex items-center gap-4">
          <a href="/" class="text-2xl font-extrabold tracking-tight text-accent">AI Solutions</a>
        </div>
        <div class="hidden md:flex items-center gap-8 text-base font-medium">
          <a href="/" class="hover:text-accent transition">Home</a>
          <a href="/about" class="hover:text-accent transition">About</a>
          <a href="/services" class="hover:text-accent transition">Services</a>
          <a href="/blog" class="hover:text-accent transition">Blog</a>
          <a href="/contact" class="hover:text-accent transition">Contact</a>
        </div>
        <div class="flex items-center gap-2">
          <a href="/get-started" class="hidden md:inline-block bg-accent text-white font-semibold px-5 py-2 rounded-lg shadow hover:bg-accent/90 transition">Get Started</a>
          <ThemeToggle />
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main id="main" class="flex-1 w-full flex flex-col items-center justify-start bg-gradient-to-br from-gray-900 via-gray-950 to-gray-900 pt-12 pb-16 px-4">
      <div class="w-full max-w-4xl">
        <slot />
      </div>
    </main>

    <!-- Footer -->
    <footer class="w-full bg-gray-900 border-t border-white/10 py-8 mt-auto">
      <div class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-gray-400">
        <div>
          &copy; {new Date().getFullYear()} AI Solutions Consulting. All rights reserved.
        </div>
        <div class="flex gap-4">
          <a href="/privacy" class="hover:text-accent transition">Privacy Policy</a>
          <a href="/terms" class="hover:text-accent transition">Terms</a>
          <a href="https://github.com/itferlanditferland" class="hover:text-accent transition" target="_blank" rel="noopener">GitHub</a>
        </div>
      </div>
    </footer>
  </body>
</html>
