---
import "../global.css";
import TerminalFooter from '../components/TerminalFooter.astro';
import ThemeToggle from "../components/ThemeToggle.jsx";
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="bg-[--background] text-[--ascii-color]">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | AI Solutions` : 'AI Solutions Consulting'}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans bg-[--background] text-[--ascii-color] relative overflow-hidden min-h-screen">
    <header class="flex justify-end p-4">
      <ThemeToggle />
    </header>
    <!-- Floating particles -->
    <script is:inline>
      const chars = ['*', '+', '.', 'M', 'c', ':', 'N'];
      for (let i = 0; i < 50; i++) {
        const el = document.createElement('div');
        el.textContent = chars[Math.floor(Math.random() * chars.length)];
        el.style.position = 'fixed';
        el.style.left = Math.random() * 100 + 'vw';
        el.style.top = Math.random() * 100 + 'vh';
        el.style.color = 'var(--ascii-color)';
        el.style.fontFamily = 'monospace';
        el.style.opacity = 0.4;
        el.style.fontSize = Math.random() * 1.2 + 0.8 + 'rem';
        el.style.zIndex = '0';
        el.style.pointerEvents = 'none';
        el.setAttribute('aria-hidden', 'true');
        el.style.animation = `floatUp ${6 + Math.random() * 8}s linear infinite`;
        document.body.appendChild(el);
      }
    </script>
    <style>
      @keyframes floatUp {
        0% { transform: translateY(0); }
        100% { transform: translateY(-100vh); }
      }
    </style>

    <!-- Pixel Avatar -->
    <img src="/pixel-bot.gif" alt="Bot" class="fixed bottom-4 left-4 w-12 animate-bounce z-20" />

    <!-- ASCII Banner -->
    <pre class="text-[--ascii-color] text-sm md:text-base leading-none font-mono text-center mt-4 mb-2 glow select-none">
Mc:âˆ˜cCM**+.Nm::++NM+:Xm:.N.Mc:+
    </pre>

    <!-- Sticky Navigation -->
    <header class="fixed top-0 inset-x-0 z-50 bg-white/70 backdrop-blur-md shadow-md">
      <nav class="mx-auto flex max-w-7xl items-center justify-center gap-10 py-4 text-lg font-medium">
        <a class="hover:text-sky-600 transition-colors" href="/">Home</a>
        <a class="hover:text-sky-600 transition-colors" href="/about">About</a>
        <a class="hover:text-sky-600 transition-colors" href="/services">Services</a>
        <a class="hover:text-sky-600 transition-colors" href="/blog">Blog</a>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="relative z-10 max-w-3xl mx-auto px-6 py-8 border-2 border-[--border-color] rounded-xl shadow-[0_0_20px_var(--border-color)] bg-[--background] pt-24">
      <slot />
    </main>
    <TerminalFooter />
  </body>
</html>
