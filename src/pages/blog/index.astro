---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('posts');
console.log("✅ Blog debug: Number of posts found:", posts.length);

posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<!-- ✅ Blog index rendering via content collections -->
<Layout title="Blog – Latest AI Automation">
  <h1 class="text-green-500 text-center text-2xl font-bold my-6">Blog – Latest AI Automation</h1>

  {posts.length === 0 ? (
    <p class="text-white text-center">⚠️ No posts available. Check src/content/posts/ and frontmatter schema.</p>
  ) : (
    <ul class="grid gap-6 px-4">
      {posts.map(post => (
        <li class="bg-zinc-900 p-4 rounded-lg border border-green-500">
          <a href={`/blog/${post.slug}`} class="text-green-400 hover:underline text-lg font-mono">
            {post.data.title}
          </a>
          <div class="text-sm text-gray-400 mt-1">{new Date(post.data.date).toLocaleDateString()}</div>
        </li>
      ))}
    </ul>
  )}
</Layout>
