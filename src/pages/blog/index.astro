---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const posts = await getCollection('posts');
posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
function formatDate(date) {
  return new Date(date).toLocaleDateString(undefined, { dateStyle: 'medium' });
}
---

<!-- ✅ Blog index rendering via content collections -->
<Layout title="Blog – Latest AI Automation">
  <section class="min-h-screen bg-black text-gray-200 px-4 py-8">
    <h1 class="text-green-400 font-mono text-4xl md:text-5xl font-bold mb-6 text-center">
      Blog – Latest AI Automation
    </h1>
    {posts.length === 0 ? (
      <p class="text-center text-gray-400">No posts available.</p>
    ) : (
      <ul class="space-y-4 max-w-3xl mx-auto">
        {posts.map((post) => (
          <li class="border-b border-gray-700 pb-2">
            <a href={`/blog/${post.slug}`} class="text-green-400 hover:underline font-mono">
              {post.data.title}
            </a>
            <time class="block text-gray-500 text-sm">{formatDate(post.data.date)}</time>
          </li>
        ))}
      </ul>
    )}
  </section>
</Layout>
