---
const logos = [
  { src: '/logos/acme.svg',        alt: 'Acme' },
  { src: '/logos/foocorp.svg',     alt: 'Foocorp' },
  { src: '/logos/megacorp.svg',    alt: 'Megacorp' },
  { src: '/logos/startup.svg',     alt: 'Startup' },
  { src: '/logos/enterprisely.svg',alt: 'Enterprisely' },
];
---
<section class="mt-12 mb-6 flex flex-wrap justify-center gap-10 opacity-80">
  {logos.map(({ src, alt }) => (
    <img
      src={src}
      alt={alt}
      loading="lazy"
      class="h-6 md:h-8 grayscale hover:grayscale-0 transition"
    />
  ))}
</section> 