---
import AsciiHeading from "../components/AsciiHeading.jsx";
import DynamicCode  from "../components/DynamicCode.jsx";
import { asciiLogo } from "../data/asciiLogo";
---

<section class="relative pt-28 pb-40 px-4 overflow-hidden">
  <!-- headline -->
  <AsciiHeading
    class="select-none text-center leading-none text-[min(22vw,160px)] md:text-[140px] tracking-tight text-neon/80 drop-shadow-[0_0_4px_var(--neon)]"
  >
    {asciiLogo}
  </AsciiHeading>

  <p class="text-center mt-4 text-accent text-sm sm:text-base">
    An asynchronous coding agent
  </p>

  <!-- dotted code pane with live edits -->
  <div
    class="relative z-10 mx-auto max-w-4xl w-full rounded-3xl border border-gray-300 bg-white/80
           shadow-xl backdrop-blur-sm px-8 py-14 md:px-14 mt-16"
  >
    <DynamicCode className="text-xs sm:text-sm overflow-x-auto" />
  </div>

  <!-- mascot -->
  <img
    src="/sprites/bot.svg"
    alt=""
    width="64" height="64"
    class="absolute -left-8 -top-8 drop-shadow-[0_0_4px_var(--neon)]"
  />

  <!-- call-out card -->
  <aside
    class="absolute -right-14 bottom-10 w-64 bg-surface border-dotted-pixel rounded-2xl
           p-6 shadow-lg"
  >
    <p class="text-center mb-4 text-xs">
      Jules does coding tasks <br />
      <span class="underline">you don't want</span> to do.
    </p>
    <div class="flex gap-2">
      <a
        href="/services#bug-fixing"
        class="inline-flex items-center gap-2 rounded-lg bg-sky-600 px-5 py-3 font-semibold text-white shadow hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-sky-500 flex-1 text-center text-xs"
      >
        Bug Fixing
      </a>
      <a
        href="/services#version-bump"
        class="inline-flex items-center gap-2 rounded-lg bg-sky-600 px-5 py-3 font-semibold text-white shadow hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-sky-500 flex-1 text-center text-xs"
      >
        Version Bump
      </a>
    </div>
  </aside>
</section> 