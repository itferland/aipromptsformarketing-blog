---
import code from '../data/hero-snippet.ts?raw'; // any demo snippet you like
---

<section class="relative pt-28 pb-40 px-4 overflow-hidden">
  <!-- ASCII logotype -->
  <pre
    class="select-none text-center leading-none text-[min(22vw,160px)] md:text-[140px] tracking-tight
           text-neon/80 drop-shadow-[0_0_4px_var(--neon)]"
    aria-label="AI Solutions Consulting"
  >
{`
   _   _____     _____       _       _             _____           _           _         
  / \\ / ____|   / ____|     | |     (_)           / ____|         | |         | |        
 / _ \\ |  __   | (___  _   _| |_ ___ _ _ __ ___  | (___  _   _ ___| |_ ___  __| | ___    
/ ___ \\| |_ |   \\___ \\| | | | __/ __| | '_ \` _ \\  \\___ \\| | | / __| __/ _ \\/ _\` |/ _ \\   
/_/   \\_\\____|   ____) | |_| | || (__| | | | | | | ____) | |_| \\__ \\ ||  __/ (_| | (_) |  
             |_____/ \\__,_|\\__\\___|_|_| |_| |_| |_____/ \\__,_|___/\\__\\___|\\__,_|\\___/   
`}
  </pre>

  <p class="text-center mt-4 text-accent text-sm sm:text-base">
    An asynchronous coding agent
  </p>

  <!-- dotted-pixel code pane -->
  <div
    class="border-dotted-pixel rounded-2xl mx-auto mt-16 max-w-5xl bg-surface/80 backdrop-blur
           hover:neon-glow transition"
  >
    <!-- mascot -->
    <img
      src="/sprites/bot.svg"
      alt=""
      width="64" height="64"
      class="absolute -left-8 -top-8 drop-shadow-[0_0_4px_var(--neon)]"
    />

    <!-- code -->
    <pre class="px-8 py-10 overflow-x-auto text-xs sm:text-sm">
{code}
    </pre>

    <!-- call-out card -->
    <aside
      class="absolute -right-14 bottom-10 w-64 bg-surface border-dotted-pixel rounded-2xl
             p-6 shadow-lg"
    >
      <p class="text-center mb-4 text-xs">
        Jules does coding tasks <br />
        <span class="underline">you don't want</span> to do.
      </p>
      <div class="flex gap-2">
        <a
          href="/services#bug-fixing"
          class="flex-1 bg-accent text-bg rounded py-1 text-center text-xs font-bold
                 hover:neon-glow transition"
        >
          Bug Fixing
        </a>
        <a
          href="/services#version-bump"
          class="flex-1 bg-neon text-bg rounded py-1 text-center text-xs font-bold
                 hover:neon-glow transition"
        >
          Version Bump
        </a>
      </div>
    </aside>
  </div>
</section> 